<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <QuickView id="quickView">
        <QuickViewPage pageId="{pageId}" header="{header}" title="{title}" description="{description}" groups="{
				path: 'groups',
				templateShareable: false
			}">
            <QuickViewGroup heading="{heading}" elements="{
					path: 'elements',
					templateShareable: false
				}">
                <QuickViewGroupElement label="{label}" value="{value}" url="{url}" type="{elementType}" emailSubject="{emailSubject}">
                </QuickViewGroupElement>
            </QuickViewGroup>
            <avatar>
                <Avatar src="{icon}" displayShape="Square"/>
            </avatar>
        </QuickViewPage>
    </QuickView>
</core:FragmentDefinition>