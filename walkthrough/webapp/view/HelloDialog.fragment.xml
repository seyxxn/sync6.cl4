<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
    <Dialog
      id="helloDialog"
      title ="Hello {/recipient/name}">
        <content>
         <core:Icon
            src="sap-icon://heart-2"
            size="10rem"
            class="sapUiLargeMargin"/>
        </content>
      <beginButton>
         <Button
            text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog"/>
      </beginButton>
    </Dialog>
</core:FragmentDefinition>